<%= form_for [:admin, @track], builder: AdminFormBuilder, class: "container" do |f| %>
		
	<div class="mb-5">
		<span>Basic information</span>
		<hr />
	</div>

	<div class="form-row">
    <div class="form-group col-md-12">
			<%= f.admin_bs_text(:title, @track.title) %>
		</div>
	</div>

	<div class="form-row">
		<div class="form-group col-md-12">
			<%= f.admin_bs_file :cover_image, direct_upload: true %>
		</div>
	</div>

	<div class="form-row">
		<div class="form-group form-row mt-5">
			<%= f.submit class: 'btn btn-primary' %>
		</div>
	</div>

<% end %> 